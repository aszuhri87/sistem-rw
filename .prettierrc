{
    "overrides": [
        {
            "files": ["*.php"],
            "options": {
                "tabWidth": 4,
                "parser": "php",
                "printWidth": 100,
                "semi":false,
                "bracketSpacing": true,
                "bracketSameLine": true,
                "singleAttributePerLine": false
            }
        },{
            "files": ["*.blade.php"],
            "options": {
                "tabWidth": 4,
                "parser": "blade",
                "printWidth": 120,
                "wrapAttributes": "auto",
                "sortTailwindcssClasses": true,
                "sortHtmlAttributes": "none",
                "noPhpSyntaxCheck": false
            }
        }
    ]
}
